.list-item {
  display: flex;
	align-items: center;
  padding: 8px 0px;
  border: 0px #EBEBF0 solid; 
  border-bottom-width: 0.5px;
  flex-direction: row;
}

.list-item-text {
  flex: 1;
  font-weight: 400;
}

.block {
  background-color: white;
  margin: 8px 0;
  padding: 16px;
  border-radius: var(--border-radius-rounded-4px);
}


.radio-group {
  display: block;
  flex-direction: column;
}

.radio {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 12px;
}

.text {
  margin-left: 12px;
}

.list-item-label {
  margin-bottom: 16px;
}
